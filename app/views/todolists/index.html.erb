<div class="list-wrap">
  <div class="list-box">
    <div class="list-comment">
      <span class="list-body"></span>
      <span class="list-title"></span></div>
  </div>
</div>
<h1>投稿一覧</h1>
<% @lists.each do |list| %>
  <p>タイトル</p>
  <spam>
    <%= link_to list.title, todolist_path(list.id) %>
  </spam>
  <p>画像</p>
  <%= attachment_image_tag list, :image, :fill, 100,100, format: 'jpeg' %>
<% end %>